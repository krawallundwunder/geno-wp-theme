<ul class="flex flex-col list-none p-0 m-0 bg-white">
	{% for item in items %}
		{% set is_active = item.current or item.current_item_ancestor or item.current_item_parent %}

		<li class="border-b border-gray-50 last:border-0">
			{% if item.children is defined and item.children|length > 0 %}
				<details class="group/mobile-sub">
					<summary class="flex items-center justify-between py-4 text-lg font-semibold cursor-pointer list-none {{ is_active ? 'text-primary' : 'text-gray-800' }}">
						<span>{{ item.title }}</span>
						<svg class="w-5 h-5 text-gray-400 transition-transform group-open/mobile-sub:rotate-180" fill="none" viewbox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 9-7 7-7-7"/>
						</svg>
					</summary>
					<ul class="pb-4 pl-4 space-y-4">
						{% for child in item.children %}
							<li>
								<a href="{{ child.link|e('esc_url') }}" class="block text-base {{ child.current ? 'text-primary font-bold' : 'text-gray-600' }}" {{ child.is_external or child.is_target_blank ? ' target="_blank" rel="noopener noreferrer"' }}>
									{{ child.title }}
								</a>
							</li>
						{% endfor %}
					</ul>
				</details>
			{% else %}
				<a href="{{ item.link|e('esc_url') }}" class="block py-4 text-lg font-semibold {{ is_active ? 'text-primary' : 'text-gray-800' }}" {{ item.is_external or item.is_target_blank ? ' target="_blank" rel="noopener noreferrer"' }}>
					{{ item.title }}
				</a>
			{% endif %}
		</li>
	{% endfor %}
</ul>
