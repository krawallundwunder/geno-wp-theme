<ul class="flex items-center list-none space-x-10">
	{% for item in items %}
		{% set is_active = item.current or item.current_item_ancestor or item.current_item_parent %}
		{% set has_children = item.children is defined and item.children|length > 0 %}

		{% set child_is_active = false %}
		{% if has_children %}
			{% for child in item.children %}
				{% if child.current or child.current_item_ancestor %}
					{% set child_is_active = true %}
				{% endif %}
			{% endfor %}
		{% endif %}
		{% set parent_should_be_active = is_active or child_is_active %}

		<li class="relative group py-7">

			{% if has_children %}
				<a href="{{ item.link|e('esc_url') }}" class="relative flex items-center font-semibold text-[15px] tracking-tight transition-all duration-300 {{ parent_should_be_active ? 'text-primary' : 'text-slate-700 group-hover:text-primary' }}" {{ item.is_external or item.is_target_blank ? ' target="_blank" rel="noopener noreferrer"' }}>
					<span>{{ item.title }}</span>
					<svg class="w-3.5 h-3.5 ms-1.5 opacity-50 group-hover:rotate-180 transition-transform duration-300" fill="none" viewbox="0 0 24 24" stroke="currentColor" stroke-width="3">
						<path d="m19 9-7 7-7-7"/>
					</svg>
					<span class="absolute -bottom-1 left-0 h-0.5 bg-primary transition-all duration-300 {{ parent_should_be_active ? 'w-full' : 'w-0 group-hover:w-full' }}"></span>
				</a>

				<div class="absolute left-0 top-full z-50 invisible opacity-0 translate-y-2 group-hover:visible group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-300 ease-out min-w-60 pt-2">
					<ul class="bg-white rounded-2xl shadow-[0_20px_50px_rgba(0,0,0,0.1)] border border-gray-50 p-2">
						{% for child in item.children %}
							<li>
								<a href="{{ child.link|e('esc_url') }}" class="flex items-center px-4 py-3 rounded-xl text-[14px] font-medium transition-all duration-200 {{ child.current ? 'bg-primary/5 text-primary' : 'text-slate-600 hover:bg-slate-50 hover:text-primary' }}" {{ child.is_external or child.is_target_blank ? ' target="_blank" rel="noopener noreferrer"' }}>
									<span class="relative inline-block">
										{{ child.title }}
										{% if child.current %}
											<span class="absolute -bottom-1 left-0 w-full h-0.5 bg-primary"></span>
										{% endif %}
									</span>
								</a>
							</li>
						{% endfor %}
					</ul>
				</div>

			{% else %}
				<a href="{{ item.link|e('esc_url') }}" class="relative block font-semibold text-[15px] tracking-tight transition-all duration-300 {{ is_active ? 'text-primary' : 'text-slate-700 hover:text-primary' }}" {{ item.is_external or item.is_target_blank ? ' target="_blank" rel="noopener noreferrer nofollow"' }}>
					<span>{{ item.title }}</span>
					<span class="absolute -bottom-1 left-0 h-0.5 bg-primary transition-all duration-300 {{ is_active ? 'w-full' : 'w-0 group-hover:w-full' }}"></span>
				</a>
			{% endif %}

		</li>
	{% endfor %}
</ul>
