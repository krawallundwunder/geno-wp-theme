<flynt-component name="ModulFAQ">
	<section class="py-12 sm:py-20">
		<div
			class="container">

			{# Header Section #}
			<div class="mb-12 text-center">
				{% include "templates/_partials/headings.twig" with { tag, title, description } %}
			</div>

			{% if faqItems %}
				{% if layoutType == 'layout-2' %}
					{# Layout 2: Accordion Style #}
					<div class="flex flex-col border-t border-gray-200 max-w-4xl mx-auto">
						{% for item in faqItems %}
							<details class="group border-b border-gray-200" id="faq-{{ loop.index0 }}">
								<summary class="flex cursor-pointer items-start justify-between p-6 list-none marker:hidden transition-colors hover:bg-gray-50">
									<div class="flex items-start gap-4 text-primary">
										<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24">
											<path fill="currentColor" d="m15.07 11.25l-.9.92C13.45 12.89 13 13.5 13 15h-2v-.5c0-1.11.45-2.11 1.17-2.83l1.24-1.26c.37-.36.59-.86.59-1.41a2 2 0 0 0-2-2a2 2 0 0 0-2 2H8a4 4 0 0 1 4-4a4 4 0 0 1 4 4a3.2 3.2 0 0 1-.93 2.25M13 19h-2v-2h2M12 2A10 10 0 0 0 2 12a10 10 0 0 0 10 10a10 10 0 0 0 10-10c0-5.53-4.5-10-10-10"/>
										</svg>
										<span class="text-lg font-medium text-gray-900">{{ item.question }}</span>
									</div>

									{# Icon Toggle #}
									<svg class="ml-4 w-6 h-6 shrink-0 transition-transform duration-300 group-open:rotate-45 text-primary" fill="none" viewbox="0 0 24 24" stroke="currentColor" stroke-width="2">
										<path d="M12 6v12m6-6H6" stroke-linecap="round" stroke-linejoin="round"/>
									</svg>
								</summary>

								<div class="px-6 pb-6 text-gray-600 leading-relaxed">
									<div class="pl-9 prose prose-sm max-w-none">
										{{ item.answer|e('wp_kses_post') }}
									</div>
								</div>
							</details>
						{% endfor %}
					</div>

				{% else %}
					{# Layout 1: Grid Style #}
					<div class="grid gap-6 {{ gridClass }}">
						{% for item in faqItems %}
							<div class="bg-primary/5 border border-primary/20 rounded-xl p-6 shadow-sm transition-all duration-300 hover:shadow-md hover:border-primary/40">
								<div class="flex items-start gap-4 mb-4 text-primary">
									<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24">
										<path fill="currentColor" d="m15.07 11.25l-.9.92C13.45 12.89 13 13.5 13 15h-2v-.5c0-1.11.45-2.11 1.17-2.83l1.24-1.26c.37-.36.59-.86.59-1.41a2 2 0 0 0-2-2a2 2 0 0 0-2 2H8a4 4 0 0 1 4-4a4 4 0 0 1 4 4a3.2 3.2 0 0 1-.93 2.25M13 19h-2v-2h2M12 2A10 10 0 0 0 2 12a10 10 0 0 0 10 10a10 10 0 0 0 10-10c0-5.53-4.5-10-10-10"/>
									</svg>
									<h3 class="text-lg font-bold">{{ item.question }}</h3>
								</div>
								<div class="text-gray-600 leading-relaxed pl-9 prose prose-sm max-w-none">
									{{ item.answer|e('wp_kses_post') }}
								</div>
							</div>
						{% endfor %}
					</div>
				{% endif %}
			{% endif %}

		</div>
	</section>
</flynt-component>
