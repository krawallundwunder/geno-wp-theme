<flynt-component name="ModulFAQ">
	<section class="py-12 sm:py-20">
		<div
			class="container">

			{# Header Section #}
			<div class="mb-12 text-center">
				{% include "templates/_partials/headings.twig" with { tag, title, description } %}
			</div>

			{% if faqItems %}
				{% if layoutType == 'layout-2' %}
					{# Layout 2: Accordion Style #}
					<div class="flex flex-col border-t border-gray-200 max-w-4xl mx-auto">
						{% for item in faqItems %}
							<details class="group border-b border-gray-200" id="faq-{{ loop.index0 }}">
								<summary class="flex cursor-pointer items-start justify-between p-6 list-none transition-colors">
									<div class="flex items-start">
										<iconify-icon icon="lucide:circle-question-mark" class="w-6 h-6 mr-2 transition-transform text-primary place-content-center"></iconify-icon>
										<span class="text-lg font-medium">{{ item.question }}</span>
									</div>

									{# Icon Toggle (Rotates when open) #}
									<iconify-icon icon="lucide:plus" class="ml-4 shrink-0 transition-transform group-open:rotate-45 text-primary group-open:text-gray-400" style="font-size: 1.250rem;"></iconify-icon>
								</summary>
								<div class="px-6 pb-6 pl-8 text-gray-600 leading-relaxed">
									<div class="pl-9">{{ item.answer|raw }}</div>
								</div>
							</details>
						{% endfor %}
					</div>

				{% else %}
					{# Layout 1: Grid Style #}
					<div class="grid gap-6 {{ gridClass }}">
						{% for item in faqItems %}
							<div class="bg-primary/10 border border-primary rounded-lg p-6 shadow-sm">
								<div class="flex items-start mb-4 text-gray-900">
									<iconify-icon icon="lucide:circle-question-mark" class="w-6 h-6 mr-2 transition-transform text-primary place-content-center"></iconify-icon>
									<h3 class="text-lg font-semibold">{{ item.question }}</h3>
								</div>
							</div>
						{% endfor %}
					</div>
				{% endif %}
			{% endif %}

		</div>
	</section>
</flynt-component>
