<section class="flyin-component component-spacing bg-white">
	<div
		class="container mx-auto px-4 py-16">

		{# Header Section #}
		<div class="mb-20">
			{% include "templates/_partials/headings.twig" with { tag, title, description, buttons, textAlign: 'text-center' } %}
		</div>

		{# Kontakt Section #}
		{% if layout == 'Kontakt' and contactAreas|length > 0 %}
			<div class="mb-20">
				<div class="grid gap-8 lg:gap-12 {{ gridClass }}">
					{% for area in contactAreas %}
						{% if area.title or area.email or area.phone or area.formLink %}
							<div class="bg-primary/10 rounded-lg p-8 hover:shadow-lg transition-shadow duration-300">
								<div class="flex flex-col h-full">
									{% if area.title %}
										<h3 class="text-2xl font-medium text-gray-900 mb-4">{{ area.title }}</h3>
									{% endif %}

									<div class="space-y-3 grow">
										{% if area.email %}
											<a href="mailto:{{ area.email }}" class="block font-medium transition-colors">
												<iconify-icon icon="lucide:mail" class="w-5 h-5 mr-2 inline-block text-current place-content-center" aria-hidden="true"></iconify-icon>
												{{ area.email }}
											</a>
										{% endif %}
										{% if area.phone %}
											<a href="tel:{{ area.phone|replace({' ': '', '(': '', ')': '', '-': ''}) }}" class="block text-gray-600 hover:text-gray-800 transition-colors">
												<iconify-icon icon="lucide:phone" class="w-5 h-5 mr-2 inline-block text-current place-content-center" aria-hidden="true"></iconify-icon>
												{{ area.phone }}
											</a>
										{% endif %}
									</div>

									{% if area.formLink %}
										<div class="mt-6">
											<a href="{{ area.formLink.url }}" class="inline-flex items-center font-semibold transition-colors group" {% if area.formLink.target %} target="{{ area.formLink.target }}" {% endif %}>
												{{ area.formLink.title|default('Kontaktformular') }}
												<iconify-icon icon="lucide:arrow-right" class="w-5 h-5 ml-2 transition-transform place-content-center" aria-hidden="true"></iconify-icon>
											</a>
										</div>
									{% endif %}
								</div>
							</div>
						{% endif %}
					{% endfor %}
				</div>
			</div>
		{% endif %}

		{# Standorte Section #}
		{% if layout == 'Standorte' and locations|length > 0 %}
			<div class="grid gap-8 lg:gap-12 {{ gridClass }}">
				{% for location in locations %}
					{% if location.city or location.street %}
						<div class="bg-white border border-primary/30 rounded-lg p-8 hover:border-primary hover:shadow-lg transition-all duration-300">
							{% if location.city %}
								<h3 class="text-2xl font-medium text-gray-900 mb-6">{{ location.city }}</h3>
							{% endif %}

							<div class="space-y-2 text-gray-600 mb-6">
								{% if location.street %}
									<p class="text-base">{{ location.street }}</p>
								{% endif %}
								<p class="text-base">
									{{ location.zip }}
									{{ location.cityName }}{{ location.country ? ', ' ~ location.country : '' }}
								</p>
							</div>

							{% if location.phone or location.email %}
								<div class="space-y-2 mb-6 pt-4 border-t border-gray-200">
									{% if location.phone %}
										<a href="tel:{{ location.phone|replace({' ': '', '(': '', ')': '', '-': ''}) }}" class="flex items-center font-bold text-gray-600 hover:text-gray-800 transition-colors">
											<iconify-icon icon="lucide:phone" class="w-5 h-5 mr-1 text-current place-content-center" aria-hidden="true"></iconify-icon>
											{{ location.phone }}
										</a>
									{% endif %}
									{% if location.email %}
										<a href="mailto:{{ location.email }}" class="flex items-center font-bold text-gray-600 hover:text-gray-800 transition-colors">
											<iconify-icon icon="lucide:mail" class="w-5 h-5 mr-1 text-current place-content-center" aria-hidden="true"></iconify-icon>
											{{ location.email }}
										</a>
									{% endif %}
								</div>
							{% endif %}

							{% if location.mapLink %}
								<a href="{{ location.mapLink }}" target="_blank" rel="noopener noreferrer" class="inline-flex items-center font-semibold transition-colors group">
									<iconify-icon icon="lucide:map-pin" class="w-5 h-5 mr-1 text-current place-content-center" aria-hidden="true"></iconify-icon>
									Auf Karte anzeigen
								</a>
							{% endif %}
						</div>
					{% endif %}
				{% endfor %}
			</div>
		{% endif %}

	</div>
</section>
