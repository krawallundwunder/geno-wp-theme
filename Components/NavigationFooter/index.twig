<flynt-component name="NavigationFooter">
	<footer class="bg-white">
		<div class="mx-auto max-w-7xl overflow-hidden px-6 py-20 sm:py-24 lg:px-8">
			{% if logo and logo.src %}
				<div class="mb-12 flex justify-center">
					{% include "Partials/_logo.twig" with { footer_logo: footer_logo, logo: logo, site: site } %}
				</div>
			{% endif %}

			{% if menu %}
				<nav aria-label="{{ labels.ariaLabel }}" class="-mb-6 flex flex-wrap justify-center gap-x-12 gap-y-3 text-sm/6">
					{% for item in menu.get_items %}
						<a href="{{ item.link }}" class="text-gray-600 hover:text-gray-900 transition-colors">
							{{ item.title }}
						</a>
					{% endfor %}
				</nav>
			{% endif %}

			{% if footer_social_media %}
				<div class="mt-16 flex justify-center gap-x-10">
					{% for social in footer_social_media %}
						{% if social.link and social.icon %}
							<a href="{{ social.link }}" class="text-gray-600 hover:text-gray-800 transition-colors" target="_blank" rel="noopener noreferrer" aria-label="{{ social.icon.alt ?: 'Social Media Link' }}">
								<span class="sr-only">{{ social.icon.alt ?: 'Social Media' }}</span>
								<img src="{{ social.icon.src }}" alt="" aria-hidden="true" class="size-6">
							</a>
						{% endif %}
					{% endfor %}
				</div>
			{% endif %}

			<p class="mt-10 text-center text-sm/6 text-gray-600">
				Copyright by krawall & wunder GmbH,
				{{ 'now'|date('Y') }}.
				{{ labels.allRightsReserved ?: 'All rights reserved.' }}
			</p>
		</div>
	</footer>
</flynt-component>
