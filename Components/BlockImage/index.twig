<flynt-component name="BlockImage" class="{{ not noComponentSpacing ? 'py-8 md:py-12 lg:py-16' }}">
	<div class="mx-auto mb-20">
		{% if image %}
			{% set sizeClass = 'max-w-full' %}
			{% if options.size == 'small' %}
				{% set sizeClass = 'max-w-2xl' %}
			{% elseif options.size == 'medium' %}
				{% set sizeClass = 'max-w-4xl' %}
			{% elseif options.size == 'large' %}
				{% set sizeClass = 'max-w-6xl' %}
			{% elseif options.size == 'full' %}
				{% set sizeClass = 'max-w-full' %}
			{% endif %}

			<figure class="{{ sizeClass }} mx-auto">
				{% if image.post_mime_type == 'image/svg+xml' %}
					<div class="relative">
						<img class="h-auto w-full max-h-[700px] object-cover object-center bg-no-repeat" src="{{ image.src }}" width="{{ image.width }}" height="{{ image.height }}" alt="{{ image.alt|e }}" loading="lazy"/>
						<div class="absolute inset-0 bg-black opacity-60"></div>
					</div>
				{% else %}
					<img class="h-auto w-full max-h-[700px] object-cover" src="{{ image.src|resizeDynamic(768) }}" srcset="{{ image.src|resizeDynamic(640) }} 640w, {{ image.src|resizeDynamic( 768 ) }} 768w, {{ image.src|resizeDynamic(1024) }} 1024w, {{ image.src|resizeDynamic( 1366 ) }} 1366w, {{ image.src|resizeDynamic(1920) }} 1920w" sizes="(max-width: 768px) 100vw, {{ options.size == 'full' ? '100vw' : '90vw' }}" width="{{ image.width }}" height="{{ image.height }}" alt="{{ image.alt|e }}" loading="lazy"/>
					<div class="absolute inset-0 bg-black opacity-60"></div>
				{% endif %}

				{% if image.caption %}
					<figcaption class="mt-3 text-sm text-gray-600 dark:text-gray-400">
						{{ image.caption|e }}
					</figcaption>
				{% endif %}
			</figure>
		{% endif %}
	</div>
</flynt-component>
