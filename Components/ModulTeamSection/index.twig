<div class="py-20 lg:py-24 bg-white" is="flynt-block-team-section">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		{% if tag or title or description or buttons %}
			{% include "templates/_partials/headings.twig" with {tag, title, description, buttons, textAlign:'text-center' } %}
		{% endif %}

		{% if teamMembers %}
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-{{ teamMembers|length <= 3 ? teamMembers|length : 3 }} gap-6 lg:gap-8">
				{% for member in teamMembers %}
					<div class="flex">
						<div class="bg-gray-100 rounded-2xl p-8 lg:p-10 flex flex-col items-center text-center w-full">

							<div class="w-40 h-40 lg:w-48 lg:h-48 mb-6">
								{% if member.fields.team_member_image %}
									<img src="{{ member.fields.team_member_image.src }}" alt="{{member.post_title}}" class="w-full h-full object-cover rounded-full" loading="lazy">
								{% else %}
									<div class="w-full h-full rounded-full bg-linear-to-br from-purple-500 to-purple-700 flex items-center justify-center">
										<svg class="w-24 h-24 text-white opacity-90" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
											<path d="M12 12C14.21 12 16 10.21 16 8C16 5.79 14.21 4 12 4C9.79 4 8 5.79 8 8C8 10.21 9.79 12 12 12ZM12 14C9.33 14 4 15.34 4 18V20H20V18C20 15.34 14.67 14 12 14Z" fill="currentColor"/>
										</svg>
									</div>
								{% endif %}
							</div>

							<div class="w-full">
								<h3 class="text-xl lg:text-2xl font-bold text-gray-900 mb-2">
									{{ member.post_title }}
								</h3>
								<p class="text-base text-gray-600 mb-5">
									{{ member.fields.team_member_position }}
								</p>

								{% if member.fields.team_member_links %}
									<div class="flex gap-3 justify-center items-center mt-5">
										{% for link in member.fields.team_member_links %}
											<a href="{{ link.link_url }}" class="w-10 h-10 flex items-center justify-center rounded-full text-primary/60 hover:text-primary/90 hover:bg-primary/30 transition-all duration-200">
												<img src="{{ link.link_image.src }}" alt="{{ member.name }}" class="w-5 h-5 object-contain">
											</a>
										{% endfor %}
									</div>
								{% endif %}

							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		{% endif %}
	</div>
</div>
