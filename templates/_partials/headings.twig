{% set textAlign = textAlign|default('text-start') %}
{% set isTextCenter = textAlign == 'text-center' %}
{% set baseClasses = 'flex flex-col pb-12' %}
{% set descriptionClass = 'prose lg:prose-lg prose-li:marker:text-current prose-p:text-xl prose-a:text-current prose-strong:text-current prose-blockquote:text-current prose-headings:text-current max-w-none' %}


<div class="{{ baseClasses }} {{ textAlign }}">
	{% if tag %}
		<span class="heading-2xs pb-3.5 text-primary/50 uppercase">{{ tag|e }}</span>
	{% endif %}

	{% if title %}
		<{{heading_level|default('h2')}} class="heading-xl pb-6">{{ title|e }}</{{heading_level|default('h2')}}>
	{% endif %}

	{% if description %}
		<div class="{{ descriptionClass }} {% if isTextCenter %}self-center w-[80%]{% endif %}">
			{{ description|e('wp_kses_post')}}
		</div>
	{% endif %}

	{% if buttons %}
		<div class="flex md:flex-row gap-4 pt-8 {% if isTextCenter %}justify-center{% else %}justify-start{% endif %}">
			{% for button in buttons %}
				{% include "templates/_partials/button.twig" with {
          text: button.text,
          link: button.link,
          target: button.target,
          variant: loop.first ? 'primary' : 'outlined',
        } only %}
			{% endfor %}
		</div>
	{% endif %}
</div>
